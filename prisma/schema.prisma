generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Contact {
  id            Int @id @default(autoincrement())
  name          String
  number        Int
  notes         String
  profile_pict  String
  label         Label? @relation(fields: [labelId], references: [id], onDelete: SetNull)
  labelId       Int?
  group         Group[]
  blacklist     Blacklist[]
  deletedAt     DateTime?
}

model Label {
  id            Int @id @default(autoincrement())
  label_name    String
  contact       Contact[]
  deletedAt     DateTime?
}

model Group {
  id           Int @id @default(autoincrement())
  group_name   String
  contact      Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId    Int
  deletedAt    DateTime?
}

model Blacklist {
  id           Int @id @default(autoincrement())
  blacklist    Boolean?
  contact      Contact @relation(fields: [contactId], references: [id])
  contactId    Int
}